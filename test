#include <iostream>
#include <windows.h>

using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

        double n;
        double m;
        int six_seven_boxes = 7;
        int eight_candy_boxes;
        
        cout << "\nВведіть масу шести коробки з печивом (в кг): ";
        cin >> n;

        cout << "\nВведіть різницю у масі між коробкою з цукерками та коробкою з печивом (в кг): ";
        cin >> m;

        eight_candy_boxes = ((n / 7) + m) * 8;

        cout << "Маса восьми коробок із цукерками: " << eight_candy_boxes << " кг" << endl;
       

        return 0;
    
}
